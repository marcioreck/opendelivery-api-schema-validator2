{
  "name": "opendelivery-api-schema-validator2",
  "version": "2.0.0",
  "description": "OpenDelivery API Schema Validator 2 - Ferramenta avançada para validação, verificação de compatibilidade e certificação de implementações da API OpenDelivery",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "dev": "nodemon src/index.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "install:all": "npm ci && cd backend && npm ci && cd ../frontend && npm ci",
    "build:all": "npm run build && cd frontend && npm run build && cd ../backend && npm run build",
    "deploy:build": "npm run build:all",
    "deploy:test": "npm test && cd frontend && npm test && cd ../backend && npm test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marcioreck/opendelivery-api-schema-validator2.git"
  },
  "keywords": [
    "opendelivery",
    "api",
    "validator",
    "schema",
    "compatibility",
    "certification",
    "delivery",
    "json",
    "validation"
  ],
  "author": {
    "name": "Márcio Reck",
    "url": "https://fazmercado.com"
  },
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "yaml": "^2.3.4",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.5",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 